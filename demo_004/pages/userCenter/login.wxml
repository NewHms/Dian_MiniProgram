<!--logs.wxml-->
<view class="page">
  <view class='page__hd'>
    <view class='section__ctn'>
      <image style='width:100px; height:100px;' src='https://o97mkvfjm.qnssl.com/logo.png'></image>
    </view>
  </view>
  <view class='page__bd'>
    <view class='section'>
      <input type='text' bindinput='bindEmail' placeholder='邮箱' auto-focus/>
    </view>
    <view class='section'>
      <input type='password' bindinput='bindPassword' placeholder='密码'/>
    </view>
    <view class='section'>
      <view class='btn-area'>
        <button type='primary' ontap="login">登录</button>
      </view>
    </view>
    <view class='section'>
      <view class='btn-area'>
        <button type='default'>新用户注册</button>
      </view>
    </view>
    <view class='section'>
      <view class='btn-area'>
        <button type='default'>忘记密码</button>
      </view>
    </view>
  </view>
</view>